# Agent Browser Backend Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/agent_browser

# AI Services
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Server Configuration
HOST=0.0.0.0
PORT=8001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Task Execution Configuration
# Task execution mode: 'sequential' (one at a time) or 'parallel' (multiple concurrent)
TASK_EXECUTION_MODE=sequential
# Maximum number of tasks to run concurrently (only applies to parallel mode)
MAX_CONCURRENT_TOOLS=6